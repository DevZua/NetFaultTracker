<script>
    // CSRF 토큰을 동적으로 설정하는 JavaScript
    function getCsrfToken() {
        const metaElement = document.querySelector('meta[name="_csrf"]');
        if (metaElement) {
            const csrfToken = metaElement.getAttribute('content');
            document.querySelector('input[name="_csrf"]').value = csrfToken;
        }
    }

    // 페이지 로드 시 CSRF 토큰 설정
    document.addEventListener('DOMContentLoaded', getCsrfToken);
</script>
